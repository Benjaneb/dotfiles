git_branch() {
    vcs_info
	if [ -z $vcs_info_msg_0_ ]; then
        echo "%# %F{blue}"
    else
        echo "%F{blue}%K{208}ÓÇ∞%F{white} Óú• ${vcs_info_msg_0_} %# %F{208}"
    fi
}

PROMPT="%K{245} %F{49}üíª %n %f%F{245}%k%K{blue}ÓÇ∞%f üóÅ  %~ \$(git_branch)%kÓÇ∞%f "

