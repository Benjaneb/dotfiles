git_branch() {
    vcs_info
	if [ -z $vcs_info_msg_0_ ]; then
        echo "%# %F{blue}"
    else
        echo "%F{blue}%K{208}î‚°%F{white} îœ¥ ${vcs_info_msg_0_} %# %F{208}"
    fi
}

